{% extends 'template.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Pa</th>
                <td>{{ product.buyingPrice }}</td>
            </tr>
            <tr>
                <th>Pv</th>
                <td>{{ product.sellingPrice }}</td>
            </tr>
            <tr>Order
                <th>Tva</th>
                <td>{{ product.vat }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img style="max-width: 80px; max-height: 80px" src="{{ asset('uploads/images/'~product.image) }}"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
