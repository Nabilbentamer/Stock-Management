{% extends 'template.html.twig' %}

{% block title %}Products List{% endblock %}

{% block body %}
    <h1>Products List</h1>

    <table class="table table-condensed">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Buying Price</th>
            <th>Selling Price</th>
            <th>VAT</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.buyingPrice }} $</td>
                <td>{{ product.sellingPrice }} $</td>
                <td>{{ product.vat }} %</td>

                <td><img src="{{ asset('uploads/images/' ~ product.image) }}"
                         alt="" width="100" height="100"></td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-info"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}" class="btn btn-success">Create new</a>

{% endblock %}
