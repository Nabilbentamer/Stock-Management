{% extends 'template.html.twig' %}

{% block title %}Categories List{% endblock %}

{% block body %}
    <h1>Categories list</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Products Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.products|length }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-xs btn-info" title="Show"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-xs btn-warning" title="Edit"><i class="fa fa-edit"></i></a>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Create new</a>
{% endblock %}
