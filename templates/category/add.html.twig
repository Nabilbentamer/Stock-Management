{% extends 'template.html.twig' %}

{% block body %}
    <div class="container">
        <div class="card">
                <div class="card-header">
                    <i class="icon_menu"></i>New Category
                </div>
                <div class="card-body">
                    {{ form_start(f) }}
                    {{ form_widget(f) }}
                    {{ form_end(f) }}
                    <table class="class table table-condensed">
                        <thead>
                        <th>ID</th>
                        <th>libelle</th>
                        </thead>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.name }}</td>
                                <td class="col-md-1">
                                    <a href="{{ path('category_delete', {'id': category.id}) }}" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
        </div>
    </div>
{% endblock %}