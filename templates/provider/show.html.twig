{% extends 'template.html.twig' %}

{% block title %}Provider{% endblock %}

{% block body %}
    <h1>Provider</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ provider.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ provider.code }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ provider.name }}</td>
            </tr>
            <tr>
                <th>Responsable</th>
                <td>{{ provider.responsible }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ provider.address}}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ provider.city }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ provider.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ provider.email }}</td>
            </tr>
            <tr>
                <th>Matfisc</th>
                <td>{{ provider.taxRegNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('provider_index') }}">back to list</a>

    <a href="{{ path('provider_edit', {'id': provider.id}) }}">edit</a>

    {{ include('provider/_delete_form.html.twig') }}
