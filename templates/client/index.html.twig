{% extends 'template.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
  <div class ="container">
            <div class ="panel panel-primary">
                <div class ="panel-heading">
               <i class="icon_menu"></i>Liste Client
            </div>
             
                <div class ="panel-body">
    <h1>Client index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Name</th>
                <th>Responsible</th>
                <th>Address</th>
                <th>City</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Tax Reg. Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.code }}</td>
                <td>{{ client.name }}</td>
                <td>{{ client.responsible }}</td>
                <td>{{ client.address }}</td>
                <td>{{ client.city }}</td>
                <td>{{ client.phone }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.taxRegNumber }}</td>
                <td>
                  <a href="{{ path('client_show', {'id': client.id}) }}" class = "btn btn-success">Show</a>
                    </td>
                    <td>
                    <a href="{{ path('client_edit', {'id': client.id}) }}" class = "btn btn-warning">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}" class = "btn btn-success">Create new</a>
</div>
</div>
</div>
{% endblock %}
