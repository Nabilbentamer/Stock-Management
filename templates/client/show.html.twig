{% extends 'template.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ client.code }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Responsable</th>
                <td>{{ client.responsible }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.address }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ client.city }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ client.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Matfisc</th>
                <td>{{ client.taxRegNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}">back to list</a>

    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
